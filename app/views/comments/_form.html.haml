= simple_form_for([@post, @post.comments.build]) do |f|
  - if f.object.errors.present?
    %ul{:class => "alert alert-danger"}
      - @comment.errors.messages.each do |key, value|
        %li{style: 'margin-left: 5px;'}= "#{key.to_s} #{value.join(',')}"

  .form-group
    = f.input :content, label: false, placeholder: t(:type_comment), required: true

  .form-actions
    = f.button :submit, t(:comment), class: 'btn btn-sm btn-danger'
