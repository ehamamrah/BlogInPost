.col-sm-8
  .custom-background
    %h3
      = @post.title
      .pull-right
        %small
          = link_to @post.category.name, category_path(@post.category), class: 'label label-info'
    %hr
    = render partial: 'post', locals: { post: @post }

.col-sm-4
  .custom-background
    %h3= t(:related_posts)
    %hr
    = render partial: 'related_posts'
